
@{
    ViewData["Title"] = "SalesHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section StylesPOS{
    <link href="~/plugins/jquery-ui/jquery-ui.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css">
    <link href="~/plugins/data-tables/datatables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/buttons.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/responsive.datatables.min.css" rel="stylesheet">
    <link href="~/plugins/jquery-ui/jquery-ui.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.3/dist/css/bootstrap.min.css">

   
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6>Sales History</h6>
    </div>
    <div class="card-body">
        <div class="form-row align-items-end">

            <div class="form-group col-sm-3">
                <label for="txtStartDate">Start Date</label>
                <input type="text" class="form-control" id="txtStartDate">
            </div>
            <div class="form-group col-sm-3">
                <label for="txtEndDate">End Date</label>
                <input type="text" class="form-control" id="txtEndDate">
            </div>
            <div class="form-group col-sm-3">
                <button type="button" class="btn btn-primary btn-block" id="btnSearch"><i class="fas fa-search"></i> Search</button>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table id="tbsale" class="table table-striped" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th >Registration date</th>
                            <th >Sale Number</th>
                            <th >Document Type</th>
                            <th >Contact Number</th>
                            <th >Customer Name</th>
                            <th >Total</th>
                            <th >Cash</th>
                            <th >Change</th>


                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
 <!--  Modal-->
 <div class="modal fade" id="modalData" tabindex="-1" role="dialog"aria-hidden="true" data-backdrop="static">
     <div class="modal-dialog modal-lg" role="document">
         <div class="modal-content">
             <div class="modal-header">
                 <h6>Sale Detail</h6>
                 <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">×</span>
                 </button>
             </div>
             <div class="modal-body">
                 <form>
                     <div class="row">
                         <div class="col-sm-12">
                             <div class="form-row">
                                 <div class="form-group col-sm-4">
                                     <label for="txtRegistrationDate">Registration date</label>
                                     <input type="text" class="form-control form-control-sm" id="txtRegistrationDate" disabled>
                                 </div>
                                 <div class="form-group col-sm-4">
                                     <label for="txtSaleNumber">Sale Number</label>
                                     <input type="text" class="form-control form-control-sm" id="txtSaleNumber" disabled>
                                 </div>
                                 <div class="form-group col-sm-4">
                                     <label for="txtRegisterUser">Register User</label>
                                     <input type="text" class="form-control form-control-sm" id="txtRegisterUser" disabled>
                                 </div>
                             </div>
                             <div class="form-row">
                                 <div class="form-group col-sm-4">
                                     <label for="txtDocumentType">Document Type</label>
                                     <input type="text" class="form-control form-control-sm" id="txtDocumentType" disabled>
                                 </div>
                                 <div class="form-group col-sm-4">
                                     <label for="txtClientDocument">Contact Number</label>
                                     <input type="text" class="form-control form-control-sm" id="txtClientDocument" disabled>
                                 </div>
                                 <div class="form-group col-sm-4">
                                     <label for="txtClientName">Customer Name</label>
                                     <input type="text" class="form-control form-control-sm" id="txtClientName" disabled>
                                 </div>
                             </div>
                             <div class="form-row">
                                 <div class="form-group col-sm-4">
                                     <label for="txtSubTotal">Sub Total</label>
                                     <input type="text" class="form-control form-control-sm" id="txtSubTotal" disabled>
                                 </div>
                                 <div class="form-group col-sm-4">
                                     <label for="txtTaxes">Taxes</label>
                                     <input type="text" class="form-control form-control-sm" id="txtTaxes" disabled>
                                 </div>
                                 <div class="form-group col-sm-4">
                                     <label for="txtTotal">Total</label>
                                     <input type="text" class="form-control form-control-sm" id="txtTotal" disabled>
                                 </div>

                                <div class="form-group col-sm-4">
                                    <label for="txtCash">Cash</label>
                                    <input type="text" class="form-control form-control-sm" id="txtCash" disabled>
                                </div>

                                <div class="form-group col-sm-4">
                                    <label for="txtChange">Change</label>
                                    <input type="text" class="form-control form-control-sm" id="txtChange" disabled>
                                </div>

                             </div>
                             <div class="row">
                                 <div class="col-sm-12">
                                     <table id="tbProducts" class="table table-sm table-striped">
                                         <thead>
                                             <tr>
                                                <th></th>
                                                 <th>Product</th>
                                                 <th>Quantity</th>
                                                 <th>Price</th>
                                                 <th>Total</th>
                                                <th>Cash</th>
                                                <th>Change</th>
                                                <th></th>
                                             </tr>
                                         </thead>
                                         <tbody>
                                         </tbody>
                                     </table>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </form>
             </div>
             <div class="modal-footer">
                 <a href="#" class="btn btn-primary"  target="_blank" id="linkPrint" >Print</a>
                 <button class="btn btn-danger" type="button" data-dismiss="modal">Close</button>
             </div>
         </div>
     </div>
 </div>

 @section Scripts{

    <script src="~/plugins/data-tables/jquery.datatables.min.js"></script>
    <script src="~/plugins/data-tables/datatables.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/datatables.responsive.min.js"></script>


    <script src="~/plugins/data-tables/dataTables.buttons.min.js"></script>
    <script src="~/plugins/data-tables/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/jszip.min.js"></script>
    <script src="~/plugins/data-tables/buttons.html5.min.js"></script>
    <script src="~/plugins/data-tables/buttons.print.min.js"></script>

    

    <script src="~/plugins/jquery-ui/jquery-ui.js"></script>
    <script src="~/js/views/SalesHistorySale.js"></script>

  
 }