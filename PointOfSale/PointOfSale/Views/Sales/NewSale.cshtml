<script>

    function validateName() {
        var nameInput = document.getElementById('txtNameClient').value;
        var errorElement = document.getElementById('nameError');

        if (nameInput.trim() === '') {
            errorElement.textContent = 'Name cannot be blank';
        } else {
            errorElement.textContent = '';
        }
    }

    function displayValue() {
        // Get the txtTotal and txtCash elements
        var Total = parseFloat(document.getElementById('txtTotal').value);
        var txtCash = document.getElementById('txtCash');

        // Attach input event listener to txtCash
        txtCash.addEventListener('input', function () {
            // Remove non-numeric characters
            this.value = this.value.replace(/[^0-9.]/g, '');

            // Ensure the first character is not a dot (.)
            if (this.value.startsWith('.')) {
                this.value = this.value.slice(1);
            }

            // Ensure there is only one dot (.) in the input
            var dotIndex = this.value.indexOf('.');
            if (dotIndex !== -1) {
                this.value = this.value.slice(0, dotIndex + 1) + this.value.slice(dotIndex + 1).replace(/\./g, '');
            }
        });

        // Get the numeric value of txtCash
        var Cash = parseFloat(txtCash.value);

        var Result = 0.00;

        if (isNaN(Cash) || Cash < 0) {
            // Handle invalid input, such as non-numeric or negative values
            document.getElementById('txtChange').value = 'Invalid input';
            return;
        }

        Result = Cash - Total;

        // Update the value of txtChange
        document.getElementById('txtChange').value = Result.toFixed(2);
    }

        
    

    
        function validateInput(input) {
            // Remove non-numeric characters from the input value
            input.value = input.value.replace(/\D/g, '');

        // Get the txtDocumentClient element
        var txtDocumentClient = document.getElementById('txtDocumentClient');

        // Attach input event listener to txtDocumentClient
        txtDocumentClient.addEventListener('input', function () {
            var maxLength = 11;
            var inputValue = this.value;
            var numericInput = inputValue.replace(/[^0-9]/g, '');
            var limitedInput = numericInput.slice(0, maxLength);

            // Update the value of txtDocumentClient with the limited input
            this.value = limitedInput;
        });

        }

</script>

