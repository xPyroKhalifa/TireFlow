@model PointOfSale.Models.VMUserLogin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Sleek Dashboard - Free Bootstrap 4 Admin Dashboard Template and UI Kit. It is very powerful bootstrap admin dashboard, which allows you to build products like admin panels, content management systems and CRMs etc.">
    <title>Sign In - Tire Flow</title>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500|Poppins:400,500,600,700|Roboto:400,500" rel="stylesheet" />
    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet" />

    <!-- SLEEK CSS -->
    <link id="sleek-css" rel="stylesheet" href="~/css/loginform.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    
    <style>
        .error-message {
            color: #721c24; /* Text color */
            background-color: #f8d7da; /* Background color */
            border: 1px solid #f5c6cb; /* Border color */
            padding: 10px; /* Padding around the message */
            margin-bottom: 15px; /* Margin to separate from other elements */
            border-radius: 5px; /* Rounded corners for a softer look */
            animation: fadeIn 0.5s ease-in-out;
        }

    

    </style>

</head>
<body >
    <!----------------------- Main Container -------------------------->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <!----------------------- Login Container -------------------------->
        <div class="row border rounded-5 p-3 bg-white shadow box-area">
            <!--------------------------- Left Box ----------------------------->
            <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #0D6EFD;">
                <div class="featured-image mb-3">
                    <img src="/img/TireFlowLogo.png"style="border-radius: 4px; margin-top: 11px" class="img-fluid" style="width: 250px;">
                </div>
           
            </div>

            <!-------------------- ------ Right Box ---------------------------->

            <div class="col-md-6 right-box">
                   <div class="row align-items-center">
                    <div class="header-text mb-4">
                        <h2 style="position:center">TIRE FLOW LOGIN</h2>
                       
                    </div>
                       
              
                        <form asp-controller="Access" asp-action="Login" method="post">

                        <div class="input-group mb-3">
                            <input type="email" placeholder="Email Address" class="form-control form-control-lg bg-light fs-6" id="email" asp-for="Email" required="" autocomplete="off" />
                                
                            </div>
                        <div class="input-group mb-1">
                            <input type="password" placeholder="Password"  class="form-control form-control-lg bg-light fs-6" id="pass" asp-for="PassWord" required="" />
                                
                            </div>
                        <div class="input-group mb-3">
                            <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Sign In</button>
                            
                               
                            </div>

                        @if (!string.IsNullOrEmpty(ViewData["Message"] as string))
                        {
                            <div class="error-message">@ViewData["Message"]</div>
                        }
                            <div class="signin">
                                <span>Copyright © 2023 TireFlow.</span>
                                
                            </div>


                        </form>
                    </div>
                    </div>
        </div>
    </div>
   
    
    
         

    <!-- Javascript -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
